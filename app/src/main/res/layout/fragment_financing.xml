<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_menu_preferred_finance"
            style="@style/financing_menu_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/financing_preferred" />
        <TextView
            android:id="@+id/tv_menu_credit_list"
            style="@style/financing_menu_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/credit_list" />
        <TextView
            android:id="@+id/tv_menu_transfer_zone"
            style="@style/financing_menu_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/transfer_zone" />
    </LinearLayout>
    <com.lenso.jixiangbao.view.JViewPager
        android:id="@+id/jvp_finance"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.lenso.jixiangbao.view.JViewPager>
</LinearLayout>