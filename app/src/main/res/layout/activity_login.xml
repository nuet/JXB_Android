<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:top_menu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.lenso.jixiangbao.view.TopMenuBar
        style="@style/topMenu"
        android:id="@+id/top_menu_bar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        top_menu:text="@string/login_title"
        top_menu:menuVisibility="false">

    </com.lenso.jixiangbao.view.TopMenuBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lighter_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:text="157****6360"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text="登录密码"
                android:textSize="15sp"
                android:textColor="#555555"
                android:background="@null"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:hint="请输入登录密码"
                android:textSize="15sp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@null"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:gravity="right|center_vertical"
                android:text="找回密码"
                android:textSize="15sp"
                android:textColor="@color/blue"
                android:background="@null"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="确定"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/orange"/>
        <include
            layout="@layout/item_safe_foot">

        </include>
    </LinearLayout>
</LinearLayout>
