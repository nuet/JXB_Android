<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:top_menu="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">

<com.lenso.jixiangbao.view.TopMenuBar
    style="@style/topMenu"
    android:id="@+id/top_menu_bar_forget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    top_menu:tmb_text="验证身份"
    top_menu:tmb_menuVisibility="false">

</com.lenso.jixiangbao.view.TopMenuBar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lighter_gray">

    <TextView
        android:id="@+id/tv_forget_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_gravity="left"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="验证码"
            android:textSize="15sp"
            android:textColor="#555555"
            android:background="@null"/>
        <EditText
            android:id="@+id/et_forget_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:singleLine="true"
            android:maxLength="6"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_forget_get"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:text="获取验证码"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:background="@null"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_forget_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="下一步"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn_blue"/>
    <!--<include-->
        <!--layout="@layout/item_safe_footer">-->

    <!--</include>-->
</LinearLayout>
</LinearLayout>
