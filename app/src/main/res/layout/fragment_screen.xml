<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
<LinearLayout
    android:id="@+id/ll_screen_title"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_screen_cancel"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/selector_screen_menu"
        android:text="取消"/>
    <TextView
        android:id="@+id/tv_screen_title"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="筛选"
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/tv_screen_reset"
        android:layout_width="0dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/selector_screen_menu"
        android:text="重置"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_screen_ok"
        android:showDividers="beginning"
        android:divider="@drawable/screen_ok_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_screen_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="确定"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/skyblue"
            android:background="@drawable/shape_screen_item"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_screen"
        android:layout_above="@id/ll_screen_ok"
        android:layout_below="@id/ll_screen_title"
        android:listSelector="@android:color/transparent"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</RelativeLayout>