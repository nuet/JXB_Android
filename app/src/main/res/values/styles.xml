<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
    </style>
    <style name="SplashTheme" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
    <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="LaunchActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="financing_menu_text">
        <item name="android:textColor">@color/selector_financing_menu_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="topMenu" >
        <item name="tmb_padding">5dp</item>
        <item name="tmb_textSize">18sp</item>
        <item name="tmb_textColor">@android:color/white</item>
        <item name="tmb_backgroundColor">@color/blue</item>
        <item name="tmb_backSrc">@mipmap/top_menu_back</item>
        <item name="tmb_menuSrc">@mipmap/top_menu_more</item>
    </style>

    <!--popupWindow-->
    <style name="mypopwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>

        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

</resources>
