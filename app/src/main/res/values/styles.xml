<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
    </style>
    <style name="SplashTheme" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
    <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="LaunchActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="financing_menu_text">
        <item name="android:textColor">@drawable/selector_financing_menu_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/selector_financing_menu_line</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="topMenu" >
        <item name="tmb_padding">5dp</item>
        <item name="tmb_textSize">20sp</item>
        <item name="tmb_textColor">@android:color/white</item>
        <item name="tmb_backgroundColor">@android:color/holo_blue_dark</item>
        <item name="tmb_backSrc">@mipmap/top_menu_back</item>
        <item name="tmb_menuSrc">@mipmap/top_menu_more</item>
    </style>
</resources>
