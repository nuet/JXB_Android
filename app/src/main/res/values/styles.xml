<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Translucent.NoTitleBar">

    </style>
    <style name="SplashTheme" parent="android:Theme.Translucent.NoTitleBar">
    <item name="android:windowBackground">@mipmap/ic_launcher</item>
    </style>
    <style name="financing_menu_text">
        <item name="android:textColor">@drawable/selector_financing_menu_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/selector_financing_menu_line</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
